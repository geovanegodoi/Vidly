@model IEnumerable<Vidly.TO.CustomerTO>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>

@if (Model.Count() == 0)
{
    <text>We do not any customer</text>
}
else
{ 
<table id="customers" class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MembershipType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MembershipType.DiscountRate)
        </th>
        <th colspan="3"></th>
    </tr>

    @foreach (var customer in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => customer.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => customer.MembershipType.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => customer.MembershipType.DiscountRate)%
        </td>
        <td>
            <button data-customer-id="@customer.Id" class="btn btn-primary btn-sm btn-block js-details">Details</button>
        </td>
        <td>
            <button data-customer-id="@customer.Id" class="btn btn-secondary btn-sm btn-block js-edit">Edit</button>
        </td>
        <td>
            <button data-customer-id="@customer.Id" class="btn btn-danger btn-sm btn-block js-delete">Delete</button>
        </td>
    </tr>
    }

</table>
<p>
    @Html.ActionLink("New Customer", "New", "Customers", null, new { @class = "btn btn-success btn-sm" })
</p>
}
@section scripts
{
    <script>

        $(document).ready(function () {

            $("#customers").on("click", ".js-delete", function (e) {
                e.preventDefault();
                var button = $(this);
                bootbox.confirm("Are you sure you want to delete this customer?", function (result) {
                    if (result) {
                        $.ajax({
                            url: "/api/customers/" + button.attr("data-customer-id"),
                            method: "DELETE",
                            success: function () {
                                button.parents("tr").remove();
                            }
                        });
                    }
                });
            });
        });

    </script>
}