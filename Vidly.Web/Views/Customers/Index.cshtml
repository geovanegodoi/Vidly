@model IEnumerable<Vidly.TO.CustomerTO>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>

@if (Model.Count() == 0)
{
    <text>We do not any customer</text>
}
else
{ 
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MembershipType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MembershipType.DiscountRate)
        </th>
        <th></th>
    </tr>

    @foreach (var customer in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => customer.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => customer.MembershipType.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => customer.MembershipType.DiscountRate)%
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id = customer.Id }) |
            @Html.ActionLink("Edit", "Edit", new { id = customer.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = customer.Id })
        </td>
    </tr>
    }

</table>
<p>
    @Html.ActionLink("Create New", "New")
</p>
}