@model IEnumerable<Vidly.TO.CustomerTO>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container" style="background-color:whitesmoke; border-radius:6px">
    <h2>Customers</h2>
    <hr />
    <div class="container" style="padding:15px 15px 15px 15px">
        <table id="customers" class="table table-hover">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.MembershipType)</th>
                    <th>@Html.DisplayNameFor(model => model.MembershipType.DiscountRate)</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>
<br />
@Html.ActionLink("New Customer", "New", "Customers", null, new { @class = "btn btn-success btn-sm" })
@section scripts
{
    <script>
        var jsTable = "#customers";
        var urlApi = "/api/customers";

        $(document).ready(function () {

            var dialog = null;
            var t = $(jsTable)
                .on('preXhr.dt', function (e, settings, data) {
                    dialog = bootbox.dialog({
                        message: '<div class="text-center"><i class="fa fa-spin fa-spinner"></i> Loading...</div>',
                        closeButton: false
                    });
                })
                .on('xhr.dt', function (e, settings, json, xhr) {
                    dialog.modal('hide');
                })
                .DataTable({
                    ajax: {
                        url: urlApi,
                        dataSrc: ""
                    },
                    columns: [
                        {
                            data: "name"
                        },
                        {
                            data: "membershipType.name"
                        },
                        {
                            data: "membershipType.discountRate"
                        },
                        {
                            data: "id",
                            render: function (data) {
                                return "<button data-customer-id=" + data + " class='btn btn-primary btn-sm btn-block js-details'>Details</button>"
                            }
                        },
                        {
                            data: "id",
                            render: function (data) {
                                return "<button data-customer-id=" + data + " class='btn btn-danger btn-sm btn-block js-delete'>Delete</button>"
                            }
                        }
                    ]
                });
            $(jsTable).on("click", ".js-details", function (e) {
                e.preventDefault();
                window.location.href = '@Url.Action("Details", "Customers")/' + $(this).attr("data-customer-id");
            });
            $(jsTable).on("click", ".js-delete", function (e) {
                e.preventDefault();
                bootbox.confirm("Are you sure you want to delete this customer?", function (result) {
