@model IEnumerable<Vidly.TO.MovieTO>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="background-color:whitesmoke; border-radius:6px">
    <h2>Movies</h2>
    <hr />
    <table id="movies" class="table table-hover">
        <thead>
            <tr>
                <th class="col-sm-4">@Html.DisplayNameFor(model => model.Name)</th>
                <th class="col-sm-4">@Html.DisplayNameFor(model => model.Gender)</th>
                <th class="col-sm-2"></th>
            </tr>
        </thead>
        <tbody></tbody>

    </table>
</div>
<br />
@Html.ActionLink("New Movie", "New", "Movies", null, new { @class = "btn btn-success btn-sm" })
@section scripts
{
    <script>

        var jsTable = "#movies";
        var urlApi = "/api/movies";

        $(document).ready(function () {

            var dialog = null;
            var dtTable = $(jsTable)
                .on('preXhr.dt', function (e, settings, data) {
                    dialog = bootbox.dialog({
                        message: '<div class="text-center"><i class="fa fa-spin fa-spinner"></i> Loading...</div>',
                        closeButton: false
                    });
                })
                .on('xhr.dt', function (e, settings, json, xhr) {
                    dialog.modal('hide');
                })
                .DataTable({
                    ajax: {
                        url: urlApi,
                        dataSrc: ""
                    },
                    columns: [
                        {
                            data: "name"
                        },
                        {
                            data: "gender.name"
                        },
                        {
                            data: "id",
                            render: function (data) {
                                return "<div class='btn-group'>"
                                     + "<button data-id=" + data + " class='btn btn-primary app-view'>View</button>"
                                     + "<button data-id=" + data + " class='btn btn-warning app-edit'>Edit</button>"
                                     + "<button data-id=" + data + " class='btn btn-danger  app-delete'>Delete</button>"
                                     + "</div>"
                            }
                        }
                    ]
                });
            $(jsTable)
            .on("click", ".app-view", function (e) {
                e.preventDefault();
                window.top.location.href = '@Url.Action("Details", "Movies")/' + $(this).attr("data-id");
            })
            .on("click", ".app-edit", function (e) {
                e.preventDefault();
                window.top.location.href = '@Url.Action("Edit", "Movies")/' + $(this).attr("data-id");
            })
            .on("click", ".app-delete", function (e) {
                e.preventDefault();
                var button = $(this);
                bootbox.confirm("Are you sure you want to delete this movie?", function (result) {
                    if (result) {
                        $.ajax({
                            url: urlApi + button.attr("data-id"),
                            method: "DELETE",
                            success: function () {
                                dtTable.row(button.parents("tr")).remove().draw();
                            }
                        });
                    }
                });
            });
        });
    </script>
}
